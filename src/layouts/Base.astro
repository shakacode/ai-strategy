---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
const siteTitle = "ShakaCode AI Strategy";
const fullTitle = title === "Home" ? siteTitle : `${title} | ${siteTitle}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{fullTitle}</title>
    {description && <meta name="description" content={description} />}
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />
  </head>
  <body>
    <header class="site-header">
      <div class="header-top">
        <a href="/" class="header-logo">
          <img src="/shakacode-logo.svg" alt="ShakaCode" width="149" height="34" />
          <span class="header-title">AI Strategy</span>
        </a>
        <a href="https://github.com/shakacode/ai-strategy" class="header-oss-badge">
          Open Source
        </a>
      </div>
      <nav>
        <a href="/executive-chef-model">Executive Chef Model</a>
        <a href="/industry-survey">Industry Survey</a>
        <a href="https://github.com/shakacode/claude-code-commands-skills-agents">Toolkit ↗</a>
        <a href="mailto:justin@shakacode.com">Contact Us</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div class="footer-cta">
        <p>
          <strong>Need help with AI-assisted development?</strong>
          ShakaCode helps teams adopt AI tooling with the right guardrails.
        </p>
        <div class="footer-cta-links">
          <a href="mailto:justin@shakacode.com" class="cta-button">Email justin@shakacode.com</a>
          <a href="https://meetings.hubspot.com/justingordon/30-minute-consultation" class="cta-button cta-secondary">Book a Call</a>
        </div>
      </div>
      <p>
        © {new Date().getFullYear()} <a href="https://shakacode.com">ShakaCode</a>.
        This content is open source —
        <a href="https://github.com/shakacode/ai-strategy">contribute on GitHub</a>.
      </p>
    </footer>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>

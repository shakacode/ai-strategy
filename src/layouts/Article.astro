---
import Base from "./Base.astro";

const { frontmatter } = Astro.props;
const { title, description, author, date } = frontmatter;
---

<Base title={title} description={description}>
  <article>
    <h1 class="article-title">{title}</h1>
    {
      (author || date) && (
        <p class="article-meta">
          {author && <span>By {author}</span>}
          {author && date && <span> · </span>}
          {date && <time>{date}</time>}
        </p>
      )
    }
    <slot />

    <hr />
    <section class="contribute">
      <p>
        <strong>This article is open source.</strong> Found an error? Have a different perspective?
        <a href="https://github.com/shakacode/ai-strategy/issues/new">Open an issue</a> or
        <a href="https://github.com/shakacode/ai-strategy/pulls">submit a PR</a> —
        we welcome contributions from the community.
      </p>
      <p>
        <a href="https://github.com/shakacode/ai-strategy">View on GitHub</a>
      </p>
    </section>
  </article>
</Base>
